# Don't display the copyright page
startup_message off
# Turn off the status bell
vbell off
# Define a bigger scrollback, default is 100 lines
defscrollback 10000
# Autodetach if loose connection
autodetach on
# Create status bar across the bottom with different screens
hardstatus on
hardstatus alwayslastline
# ---- black bar, red brackets selected, centered screens, cpu loads
hardstatus string '%{gk}[ %{G}%H %{g}][%= %{wk}%?%-Lw%?%{=b kR}(%{W}%n*%f %t%?(%u)%?%{=b kR})%{= kw}%?%+Lw%?%?%= %{g}][%{Y}%l%{g}]%{=b C}[ %m/%d %c ]%{W}'
# Message when activity occurs in a window
activity "activity: window ~%"  
